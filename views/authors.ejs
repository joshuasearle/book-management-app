<!DOCTYPE html>
<html lang="en">
  <%- include('./shared/head') %>
  <body>
    <%- include('./shared/navbar') %>
    <main class="container">
      <% if (authors.length === 0) { %>
      <h1>No Authors</h1>
      <% } else { %>
      <h1>List of all Authors</h1>
      <table class="table">
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>State</th>
          <th>Suburb</th>
          <th>Street</th>
          <th>Unit</th>
          <th>Book Count</th>
          <th>ID</th>
        </tr>
        <% for (author of authors) { %>
        <tr>
          <td><%= author.name.firstName %></td>
          <td><%= author.name.lastName %></td>
          <td><%= author.address.state %></td>
          <td><%= author.address.suburb %></td>
          <td><%= author.address.street %></td>
          <td><%= author.address.unit %></td>
          <td><%= author.numBooks %></td>
          <td><%= author._id %></td>
        </tr>
        <% } %>
      </table>
      <% } %>
    </main>
  </body>
</html>
