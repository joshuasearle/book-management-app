<!DOCTYPE html>
<html lang="en">
  <%- include('./shared/head') %>
  <body>
    <%- include('./shared/navbar') %>
    <main class="container">
      <% if (books.length === 0) { %>
      <h1>No Books to list</h1>
      <% } else { %>
      <h1>List of all Books</h1>
      <table class="table">
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>ISBN</th>
          <th>Date</th>
          <th>Summary</th>
        </tr>
        <% for ({title, authorName, isbn, created, summary} of books) { %>
        <tr>
          <td><%= title %></td>
          <td><%= authorName.firstName %> <%= authorName.lastName %></td>
          <td><%= isbn %></td>
          <td><%= created.toDateString() %></td>
          <td><%= summary %></td>
        </tr>
        <% } %>
      </table>
      <% } %>
    </main>
  </body>
</html>
