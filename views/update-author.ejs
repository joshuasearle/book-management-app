<!DOCTYPE html>
<html lang="en">
  <%- include('./shared/head') %>
  <body>
    <%- include('./shared/navbar') %>
    <main class="container">
      <h1>Update Author</h1>
      <form class="add-form" method="POST" action="/update-author">
        <div class="form-item">
          <label for="id">Author ID</label>
          <input type="text" name="id" id="id" />
        </div>
        <div class="form-item">
          <label for="numBook">New Book Count</label>
          <input type="number" name="numBook" id="numBook" />
        </div>
        <div class="form-item">
          <button class="submit" type="submit">Update Author</button>
        </div>
      </form>
    </main>
  </body>
</html>
